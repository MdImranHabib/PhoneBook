
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Add New Role <small>add new role</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="AdminDashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="RoleIndex" asp-controller="Account">Role List</a>               
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="CreateRole" asp-controller="Account">Add New Role</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div><h4 class="text-center text-info">@ViewBag.msg</h4></div>
                    <hr />
                    <form class="form-horizontal" asp-controller="Account" asp-action="CreateRole" method="post">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Role Name:</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="rolename" value="" placeholder="Please type role name..." />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <input type="submit" class="btn btn-success" value="Create Role" />
                                <a asp-action="RoleIndex" class="btn btn-primary">Role List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>


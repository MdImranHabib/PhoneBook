<div class="login">
    <div class="logo">
        <a href="index.html">
            <img src="../images/logo-big.png" alt="" />
        </a>
    </div>
    <div class="content">
        <div class="register-form">
            <form asp-action="Register" method="post">
                <h3>Sign Up</h3>
                <br />
                <h4 class="text-info">@ViewBag.MessageTitle</h4>
                <h5 class="text-danger">@ViewBag.MessageBody</h5>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <p class="hint">
                    Enter your account details below:
                </p>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Email</label>
                    <input asp-for="Email" class="form-control placeholder-no-fix" type="email" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*ie8, ie9 does not support html5 placeholder, so we just show field title for that*@
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <input asp-for="Password" class="form-control placeholder-no-fix" type="password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control placeholder-no-fix" type="password" placeholder="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-actions">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-default">Back</a>
                    <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="copyright">
        2020 © MassData.
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@model List<PBMS.Models.ApplicationUser>
@{
    ViewData["Title"] = "RegisterIndex";
    Layout = "~/Views/Shared/TestAdminLayout.cshtml";
    var i = 1;
}

<div class="well">
    <h3 class="alert bg-primary text-center">User List</h3>

    <table class="table table-bordered table-hover table-condensed" id="myTable">
        <thead>
            <tr class="bg-primary">
                <th>#.</th>
                <th>
                    User name
                </th>
                <th>
                    Email
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (i % 2 == 0)
                {
                    <tr class="warning">
                        <td>@i.</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                                <a asp-action="EditUser" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Edit</a>
                                <button type="submit" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure you want to delete user : @item.UserName')">Delete</button>
                            </form>                           
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="success">
                        <td>@i.</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                                <a asp-action="EditUser" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Edit</a>
                                <button type="submit" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure you want to delete user : @item.UserName')">Delete</button>
                            </form>                            
                        </td>
                    </tr>
                }
                i++;
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

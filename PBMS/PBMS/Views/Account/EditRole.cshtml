@model PBMS.Models.AccountViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Edit Role <small>edit role</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="AdminDashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="RoleIndex" asp-controller="Account">Role List</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="EditRole" asp-controller="Account" asp-route-id="@Model.Id">Edit Role</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4 col-md-offset-1">
                    <form asp-action="EditRole" method="post">
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName" class="control-label">Role Name</label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Update</button>
                            <a asp-action="RoleIndex" class="btn btn-primary">Back to List</a>
                        </div>
                    </form>
                </div>

                <div class="col-md-4 col-md-offset-2">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="bg-primary text-center">Users In This Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users.Any())
                            {
                                foreach (var user in Model.Users)
                                {
                                    <tr><td>@user</td></tr>
                                }
                            }
                            else
                            {
                                <tr><td>None at this moment</td></tr>
                            }
                        </tbody>

                    </table>
                    <div>
                        <a asp-action="EditUsersInRole" asp-controller="Account" asp-route-roleId="@Model.Id" class="btn btn-warning">Add or Remove Users</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>


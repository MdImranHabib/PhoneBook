@model PBMS.Models.Message

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Number SMS Send <small>number sms send</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="AdminIndex" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            @*<li>
                <a href="#">Page Layouts</a>
                <i class="fa fa-angle-right"></i>
            </li>*@
            <li>
                <a asp-action="Create" asp-controller="Messages">Number SMS Send</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <div class="row">
                <div class="col-md-4">
                    <h4 class="alert bg-info text-center">Number SMS</h4>
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Content" class="control-label">Message</label>
                            <textarea asp-for="Content" class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <span class="text-danger" id="msgInfo1"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Number" class="control-label">Number/Numbers</label>
                            <textarea asp-for="Number" class="form-control"></textarea>
                            <span asp-validation-for="Number" class="text-danger"></span>
                            <span class="text-danger" id="Info"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
                            <select asp-for="Type" class="form-control">
                                <option value="">--Select Type--</option>
                                <option value="Masking">Masking</option>
                                <option value="Non-Masking">Non-Masking</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <div class="col-md-4 col-md-offset-1">
                    <h4 class="alert bg-info text-center">Group SMS</h4>
                    <form asp-action="SendGroupSMS" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Message</label>
                            <textarea name="Content" class="form-control" required id="Content1"></textarea>
                            <span class="text-danger" id="msgInfo2"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Contact Group</label>
                            <select name="GroupId" class="form-control" required>
                                <option value="">--Select Group--</option>
                                @foreach(var group in ViewBag.Groups)
                                {
                                    <option value="@group.Id">@group.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Type</label>
                            <select name="Type" class="form-control" required>
                                <option value="">--Select Type--</option>
                                <option value="Masking">Masking</option>
                                <option value="Non-Masking">Non-Masking</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            //$("#demo").validate(function () {
            //    rules: {
            //        Number: {
            //            require: true,
            //            minLength: 11
            //        }
            //    }
            //});
            $("#Content").keyup(function () {
                var msgCount = 1;
                var arrItems = new Array(5,10,15);
                var strLength = $("#Content").val().length;

                $.each(arrItems, function (index, value) {
                    if (strLength > value) {
                        msgCount = msgCount + 1;
                        $("#msgInfo1").text("Characters: " + strLength + "; Message: " + msgCount);
                        
                    }
                    else if (strLength <= 0) {
                        $("#msgInfo1").text("Characters: " + strLength + "; Message: 0");
                    }
                    else {
                        $("#msgInfo1").text("Characters: " + strLength + "; Message: " + msgCount);
                    }
                });               
            });

            $("#Content1").keyup(function () {
                var msgCount = 1;
                var arrItems = new Array(5, 10, 15);
                var strLength = $("#Content1").val().length;

                $.each(arrItems, function (index, value) {
                    if (strLength > value) {
                        msgCount = msgCount + 1;
                        $("#msgInfo2").text("Characters: " + strLength + "; Message: " + msgCount);

                    }
                    else if (strLength <= 0) {
                        $("#msgInfo2").text("Characters: " + strLength + "; Message: 0");
                    }
                    else {
                        $("#msgInfo2").text("Characters: " + strLength + "; Message: " + msgCount);
                    }
                });
            });

            $("#Number").keyup(function () {
                var valid = 0;
                var invalid = 0;
                var arrItems = new Array(11, 23, 35);
                var strLength = $("#Number").val().length;

                //for (var i = 0; i < arrItems.length; i++) {
                //    if (strLength == arrItems[i]) {
                //        valid = valid + 1;
                //        $("#Info").text("Valid: " + valid + "; Invalid: 0");
                //        break;
                //    }                  
                //    else {
                //        invalid = invalid + 1;
                //        $("#Info").text("Valid: 0; Invalid: " + invalid);
                        
                //    }
                //}
                $.each(arrItems, function (index, value) {
                    if (strLength == value) {
                        valid = valid + 1;
                        $("#Info").text("Valid: " + valid + "; Invalid: 0");

                    }                  
                    else {
                        invalid = invalid + 1;
                        $("#Info").text("Valid: 0; Invalid: " + invalid);
                    }
                });                            
            });
            
        });
    </script>
}
